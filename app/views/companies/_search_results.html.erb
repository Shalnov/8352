<h2>Результаты поиска</h2>

<p>
	<b>Категории (<%= categories.size %>)</b>:
	<% for category in categories %>
		<%= link_to category.name, category %>, 
	<% end %>
</p>

<p>
	<b>Ключевые слова (<%= tags.size %>)</b>:
	<% for tag in tags %>
		<%= link_to tag.name, tag_url(tag.name) %>, 
	<% end %>
</p>

<table>
<% for company in companies %>
  <tr>
    <td><%= link_to company.name, category_company_url(company.category, company) %></td>
    <td><%=h company.address %></td>
    <td><%=h company.site %></td>
    <td><%=h company.description %></td>
    <td><%=h company.working_time %></td>
    <td><%=h company.phones %></td>
  </tr>
<% end %>
</table>

