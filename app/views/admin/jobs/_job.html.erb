<td>
  <%= job.worker_class %>
</td>
<td>
  <%= job.state %>
  <% if job.state == 'running' %>
    , progress: <%= job.progress %>
  <% end %>
  <% if ['running', 'pending'].include?(job.state) %>
    <img src="../images/ajax-loader3.gif">
  <% end %>
</td>
<td>
  <%= job.started_at %><br>
  <%= time_ago_in_words_with_customization(job.started_at) %>
</td>
<td>
  <%= job.created_at %><br>
  <%= time_ago_in_words_with_customization(job.created_at) %>
</td>
<td>
  <%= job.updated_at %><br>
  <%= time_ago_in_words_with_customization(job.updated_at) %>
</td>
<script type="text/javascript">
  //<![CDATA[
    job_state_<%= dom_id(job) %> = "<%= job.state %>";
  //]]>
</script>
